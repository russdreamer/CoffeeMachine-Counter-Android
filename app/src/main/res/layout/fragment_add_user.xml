<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".uilogic.fragments.AddUser" android:id="@+id/frameLayout">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:maxLength="15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:hint="Имя" android:textSize="24sp"/>
    <ImageView
            android:src="@drawable/avatar_incognito"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/user_avatar_img" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <TextView
            android:text="Выберите изображение пользователя"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chose_photo_txt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar_img" android:textSize="18sp"/>
    <Button
            android:text="SAVE"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/save_user_btn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"/>
    <ImageButton
            android:src="@android:drawable/presence_video_online"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/camera_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/chose_photo_txt" android:scaleType="centerCrop"/>
    <ImageButton
            android:src="@android:drawable/presence_online"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/gallery_btn"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/chose_photo_txt"
            app:layout_constraintStart_toEndOf="@+id/camera_btn"
            app:layout_constraintEnd_toStartOf="@+id/collection_btn"
            android:layout_marginEnd="8dp" android:scaleType="centerCrop"/>
    <ImageButton
            android:src="@drawable/avatar_9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/collection_btn"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/chose_photo_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:scaleType="centerCrop"/>
    <TextView
            android:text="CAMERA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_txt"
            app:layout_constraintTop_toBottomOf="@+id/camera_btn" app:layout_constraintStart_toStartOf="@+id/camera_btn"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="@+id/camera_btn"
    />
    <TextView
            android:text="GALLERY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallery_txt"
            app:layout_constraintTop_toBottomOf="@+id/gallery_btn"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/gallery_btn"
            app:layout_constraintEnd_toEndOf="@+id/gallery_btn"
            app:layout_constraintHorizontal_bias="0.477"/>
    <TextView
            android:text="COLLECTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collection_txt"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/collection_btn"
            app:layout_constraintStart_toStartOf="@+id/collection_btn"
            app:layout_constraintEnd_toEndOf="@+id/collection_btn"/>


</android.support.constraint.ConstraintLayout>
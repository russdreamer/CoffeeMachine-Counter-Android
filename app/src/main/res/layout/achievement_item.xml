<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/achievement_item"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" android:background="@drawable/achievement">

    <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="140dp"/>
    <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content" android:id="@+id/achievement_name"
            android:textAlignment="center" android:textSize="24sp"
            android:fontFamily="@font/frankc" android:textColor="@android:color/black" android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider7"
            app:layout_constraintStart_toEndOf="@+id/checked_sign" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/achievement_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/achievement_name"
            app:layout_constraintStart_toEndOf="@+id/checked_sign" android:layout_marginStart="8dp"
            android:textColor="@color/design_default_color_primary_dark" android:fontFamily="@font/frankc"
            android:textStyle="italic"
    >
    </TextView>
    <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/achievement_description"
            app:layout_constraintStart_toEndOf="@+id/checked_sign" android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/checked_sign" android:checked="false"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/achievement_name" android:src="@drawable/checked"
            android:scaleType="centerCrop" android:background="@null"/>
</android.support.constraint.ConstraintLayout>
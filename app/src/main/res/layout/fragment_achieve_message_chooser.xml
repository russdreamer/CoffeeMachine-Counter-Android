<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".uilogic.fragments.AchieveMessageChooser"
                                             android:id="@+id/frameLayout7">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/secret_message_txt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textAlignment="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName|textMultiLine"
            android:ems="10"
            android:id="@+id/secret_message" android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/secret_message_txt"
            android:textAlignment="center"
            android:textSize="24sp" app:layout_constraintBottom_toTopOf="@+id/message_ok_btn"
            android:singleLine="false"/>
    <Button
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/message_ok_btn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
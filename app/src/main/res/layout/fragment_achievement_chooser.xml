<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".uilogic.fragments.AchievementChooser"
                                             android:id="@+id/frameLayout5" android:background="@color/bgCollor">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/choose_achievement_txt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:textSize="30sp"
            android:fontFamily="@font/frankc" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/choose_achievement_ok_btn"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/choose_achievement_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/achievement_chooser"/>
    </ScrollView>
    <Button
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/choose_achievement_ok_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:textStyle="bold"
            android:fontFamily="@font/frankc" android:textColor="@android:color/white"
            android:background="@drawable/positive_button_effect"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>